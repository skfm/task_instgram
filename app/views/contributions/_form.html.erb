<%= form_with(model: @contribution, local: true, url: contribution_choose_new_or_edit) do |form| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this picture from being saved:</h2>
      <ul>
        <% @contribution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contet_box">
    <div class="field">
      <br>
      <%= form.text_area :content, :class => 'text_area' %>
    </div>
    <br>
    <div class="field">
      <%= image_tag(@contribution.picture.url) if @contribution.picture.url %>
      <br>
      <%= form.file_field :picture %>
      <%= form.hidden_field :picture_cache %>
    </div>
    <br>
    <br>
    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">
  　   新規投稿する
    </button>
  </div>
<% end %>
