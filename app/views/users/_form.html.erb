<%= form_with(model: @user, local: true, url: choose_new_or_edit) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contet_box">
    <div class="field">
      <br>
      <%= form.label :名前 %>
      <%= form.text_field :name, :class => 'field' %>
    </div>
    <div class="field">
      <br>
      <%= form.label :メールアドレス %>
      <%= form.text_field :email, :class => 'field' %>
    </div>
    <br>
    <div class="field">
      <%= image_tag(@user.image.url) if @user.image.url %>
      <br>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
    </div>
    <br>
    <br>
  </div>
<% end %>
